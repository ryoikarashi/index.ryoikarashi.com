{
    "name": "ryoikarashi.com",
    "version": "1.0.0",
    "main": "index.js",
    "author": "Ryo Ikarashi",
    "license": "MIT",
    "scripts": {
        "start": "NODE_ENV=development yarn run webpack-dev-server",
        "webpack-dev-server": "NODE_ENV=development webpack serve",
        "lint": "eslint '*/**/*.{ts,tsx}'",
        "lint:fix": "eslint '*/**/*.{ts,tsx}' --quiet --fix",
        "clean": "rm -rf ./dist/*",
        "build-functions": "netlify-lambda build --config webpack.functions.js src/functions/",
        "build": "yarn run clean && NODE_ENV=development webpack --config webpack.config.js --mode development && yarn run build-functions",
        "build:prod": "yarn run clean && NODE_ENV=production webpack --config webpack.config.js --mode production && yarn run build-functions",
        "serve": "NODE_ENV=development netlify-lambda serve --config webpack.functions.js src/functions/",
        "firestore-emulator": "firebase emulators:start --only firestore",
        "test": "yarn test:test && yarn test:prod",
        "test:test": "jest",
        "test:prod": "NODE_ENV=production jest",
        "format": "prettier --write 'src/**/*.{js,ts,json}'"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "eslint --fix",
            "jest",
            "NODE_ENV=production jest"
        ],
        "*.{js,ts,tsx,json}": "prettier --write"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "globals": {
            "ts-jest": {
                "tsConfig": "tsconfig.json"
            }
        },
        "testMatch": [
            "**/?(*.)(spec|test).ts",
            "**/tests/**/*.test.ts"
        ]
    },
    "dependencies": {
        "@babel/preset-typescript": "^7.12.1",
        "@types/aws-lambda": "^8.10.64",
        "@types/imagesloaded": "^4.1.2",
        "@types/lodash.isequal": "^4.5.5",
        "@types/urlsafe-base64": "^1.0.28",
        "@typescript-eslint/eslint-plugin": "^4.6.0",
        "@typescript-eslint/parser": "^4.6.0",
        "autoprefixer": "^10.0.1",
        "axios": "^0.21.0",
        "browserslist": "^4.14.5",
        "copy-webpack-plugin": "^6.2.1",
        "css-loader": "^5.0.0",
        "css-mqpacker": "^7.0.0",
        "cssnano": "^4.1.10",
        "dotenv": "^8.2.0",
        "eslint": "^7.12.1",
        "eslint-config-prettier": "^6.14.0",
        "eslint-loader": "^4.0.2",
        "favicons-webpack-plugin": "^4.2.0",
        "file-loader": "^6.1.0",
        "firebase": "^8.0.0",
        "firebase-admin": "^9.3.0",
        "html-loader": "^1.3.1",
        "html-webpack-plugin": "^4.5.0",
        "husky": "^4.3.0",
        "imagesloaded": "^4.1.4",
        "lint-staged": "^10.5.0",
        "lodash.isequal": "^4.5.0",
        "mini-css-extract-plugin": "^1.2.0",
        "netlify-lambda": "^2.0.1",
        "path": "^0.12.7",
        "postcss": "^8.1.4",
        "postcss-custom-properties": "^10.0.0",
        "postcss-import": "^13.0.0",
        "postcss-loader": "^4.0.3",
        "postcss-nested": "^5.0.1",
        "prettier": "^2.1.2",
        "purgecss": "^3.0.0",
        "pusher": "^4.0.0",
        "pusher-js": "^7.0.0",
        "query-string": "^6.13.6",
        "style-loader": "^2.0.0",
        "tailwindcss": "^1.9.6",
        "ts-loader": "^8.0.7",
        "typescript": "^4.0.5",
        "url-loader": "^4.1.0",
        "webpack": "^5.2.0",
        "webpack-bundle-analyzer": "^3.9.0",
        "webpack-cli": "^4.1.0",
        "webpack-dev-server": "^3.11.0",
        "webpack-node-externals": "^2.5.2",
        "@types/jest": "^26.0.15",
        "jest": "^26.6.0",
        "ts-jest": "^26.4.1"
    },
    "engines": {
        "node": "^14.13.1"
    }
}
