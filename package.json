{
    "name": "ryoikarashi.com",
    "version": "1.0.0",
    "main": "index.js",
    "author": "Ryo Ikarashi",
    "license": "MIT",
    "scripts": {
        "start": "NODE_ENV=development yarn run webpack-dev-server",
        "webpack-dev-server": "NODE_ENV=development webpack serve",
        "lint": "eslint '*/**/*.{ts,tsx}'",
        "lint:fix": "eslint '*/**/*.{ts,tsx}' --quiet --fix",
        "clean": "rm -rf ./dist/*",
        "build-functions": "NODE_OPTIONS=--openssl-legacy-provider netlify-lambda build --config webpack.functions.js src/functions/",
        "build": "yarn run clean && NODE_ENV=development webpack --config webpack.config.js --mode development && yarn run build-functions",
        "build:prod": "yarn run clean && NODE_ENV=production NODE_OPTIONS=--openssl-legacy-provider webpack --config webpack.config.js --mode production && yarn run build-functions",
        "serve": "NODE_OPTIONS=--openssl-legacy-provider NODE_ENV=development netlify-lambda serve --config webpack.functions.js src/functions/",
        "firestore-emulator": "npx firebase emulators:start --only firestore",
        "test": "yarn test:test && yarn test:prod",
        "test:test": "jest",
        "test:prod": "NODE_ENV=production jest",
        "format": "prettier --write 'src/**/*.{js,ts,json}'",
        "create-pali-dictionary": "npx tsc src/scripts/pali-crawler.ts --esModuleInterop && node src/scripts/pali-crawler",
        "postinstall": "netlify-lambda install",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --fix",
            "jest --passWithNoTests"
        ],
        "*.{js,ts,tsx,json,css,html}": "prettier --write"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "globals": {
            "ts-jest": {
                "tsConfig": "tsconfig.json"
            }
        },
        "testMatch": [
            "**/?(*.)(spec|test).ts",
            "**/tests/**/*.test.ts"
        ]
    },
    "dependencies": {
        "@babel/preset-typescript": "^7.17.12",
        "@firebase/app-compat": "^0.1.26",
        "@giphy/js-components": "^5.5.0",
        "@giphy/js-fetch-api": "^4.2.0",
        "@tailwindcss/aspect-ratio": "^0.4.0",
        "@tailwindcss/forms": "^0.5.2",
        "@tailwindcss/line-clamp": "^0.4.0",
        "@tailwindcss/typography": "^0.5.2",
        "@types/aws-lambda": "^8.10.98",
        "@types/imagesloaded": "^4.1.2",
        "@types/jest": "^28.1.0",
        "@types/lodash.groupby": "^4.6.6",
        "@types/lodash.isequal": "^4.5.5",
        "@types/puppeteer": "^5.4.0",
        "@types/urlsafe-base64": "^1.0.28",
        "@typescript-eslint/eslint-plugin": "^5.27.0",
        "@typescript-eslint/parser": "^5.27.0",
        "autoprefixer": "^10.4.7",
        "axios": "^0.27.2",
        "browserslist": "^4.14.5",
        "copy-webpack-plugin": "^11.0.0",
        "cross-fetch": "^3.1.5",
        "css-loader": "^6.7.1",
        "css-mqpacker": "^7.0.0",
        "cssnano": "^5.1.11",
        "dotenv": "^16.0.1",
        "eslint": "^8.17.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-loader": "^4.0.2",
        "favicons-webpack-plugin": "^5.0.2",
        "file-loader": "^6.1.0",
        "firebase": "^9.8.2",
        "firebase-admin": "^10.2.0",
        "firebase-tools": "^11.0.1",
        "html-loader": "^3.1.0",
        "html-webpack-plugin": "^5.5.0",
        "husky": "^8.0.1",
        "imagesloaded": "^5.0.0",
        "jest": "^28.1.0",
        "lint-staged": "^13.0.0",
        "lodash.groupby": "^4.6.0",
        "lodash.isequal": "^4.5.0",
        "mini-css-extract-plugin": "^2.6.0",
        "netlify-lambda": "^2.0.1",
        "path": "^0.12.7",
        "postcss": "^8.4.14",
        "postcss-custom-properties": "^12.1.7",
        "postcss-import": "^14.1.0",
        "postcss-loader": "^7.0.0",
        "postcss-nested": "^5.0.1",
        "prettier": "^2.1.2",
        "puppeteer": "^14.2.1",
        "purgecss": "^4.1.3",
        "pusher": "^5.1.0-beta",
        "pusher-js": "^7.1.1-beta",
        "query-string": "^7.1.1",
        "style-loader": "^3.3.1",
        "tailwindcss": "^3.0.24",
        "ts-jest": "^28.0.4",
        "ts-loader": "^9.3.0",
        "typescript": "^4.7.3",
        "url-loader": "^4.1.0",
        "webpack": "^5.73.0",
        "webpack-bundle-analyzer": "^4.5.0",
        "webpack-cli": "^4.1.0",
        "webpack-dev-server": "^4.9.1",
        "webpack-node-externals": "^3.0.0"
    },
    "engines": {
        "node": "^17.4.0"
    }
}
