{
  "name": "ryoikarashi.com",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Ryo Ikarashi",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=development webpack-dev-server",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "clean": "rm -rf ./dist/*",
    "build-functions": "netlify-lambda build src/functions/",
    "build": "yarn run clean && NODE_ENV=development webpack --config webpack.config.js --mode development && yarn run build-functions",
    "build:prod": "yarn run clean && NODE_ENV=production webpack --config webpack.config.js --mode production && yarn run build-functions",
    "serve": "netlify-lambda serve src/functions/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@babel/preset-typescript": "^7.10.4",
    "@types/aws-lambda": "^8.10.63",
    "@types/redis": "^2.8.27",
    "@types/urlsafe-base64": "^1.0.28",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "autoprefixer": "^10.0.1",
    "axios": "^0.20.0",
    "browserslist": "^4.14.5",
    "css-loader": "^4.3.0",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.10",
    "dotenv": "^8.2.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-loader": "^4.0.2",
    "favicons-webpack-plugin": "^4.2.0",
    "file-loader": "^6.1.0",
    "html-loader": "^1.3.1",
    "html-webpack-plugin": "^4.5.0",
    "mini-css-extract-plugin": "^0.12.0",
    "netlify-lambda": "^2.0.1",
    "path": "^0.12.7",
    "postcss": "^8.1.1",
    "postcss-custom-properties": "^10.0.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^4.0.3",
    "postcss-nested": "^5.0.1",
    "prettier": "^2.1.2",
    "purgecss": "^3.0.0",
    "query-string": "^6.13.5",
    "redis": "^3.0.2",
    "style-loader": "^1.3.0",
    "tailwindcss": "^1.8.12",
    "ts-loader": "^8.0.4",
    "typescript": "^4.0.3",
    "url-loader": "^4.1.0",
    "urlsafe-base64": "^1.0.0",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "engines": {
    "node": "^14.13.1"
  }
}
